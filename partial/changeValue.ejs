<script>
    function changeValue(type) {
        const input = document.getElementById('personenInput');
        const value = parseInt(input.value);
        if (type === 'plus') {
            input.value = value + 1;
        } else if (type === 'minus') {
            input.value = value - 1;
            if (input.value <= 1) {
                input.value = 1;
            }
        }
    }
</script>