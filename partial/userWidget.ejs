<div class="persBox">
    <button type="button" class="personButton" onclick="changePerson('1')"><img src="/icons/person_blank.png" id="1"></button>
    <button type="button" class="personButton" onclick="changePerson('2')"><img src="/icons/person_blank.png" id="2"></button>
    <button type="button" class="personButton" onclick="changePerson('3')"><img src="/icons/person_blank.png" id="3"></button>
    <button type="button" class="personButton" onclick="changePerson('4')"><img src="/icons/person_blank.png" id="4"></button>
</div>
<script>
    function changePerson(id) { //TODO: macheert nogni volledig
        const person = document.getElementById(id);
        const buttons = document.querySelectorAll('.personButton');
        if (person.src.includes('person_blank')) {
            person.src = '/icons/person_filled.png';
            for (let i = 0; i < buttons.length; i++) {
                buttons[i].src = '/icons/person_filled.png';
            }
        } else {
            person.src = '/icons/person_blank.png';
            for (let i = 0; i < buttons.length; i++) {
                buttons[i].src = '/icons/person_blank.png';
            }
        }
    }
</script>
<style>
    .persBox {
        display: flex;
        justify-content: space-around;
        width: 100%;
        margin-top: 10px;
    }

    .personButton {
        border-radius: 5px;
        width: 50px;
        height: 50px;
    }

    .personButton img {
        width: 100%;
        height: 100%;
    }
</style>
