                        <button type="button" id="iconButton" onclick="clickedTag(event)"><img src="/icons/ei.png" title="Ei" id="icon"></button>
                        <button type="button" id="iconButton" onclick="clickedTag(event)"><img src="/icons/gluten.png" title="Gluten" id="icon"></button>
                        <button type="button" id="iconButton" onclick="clickedTag(event)"><img src="/icons/lupine.png" title="Lupine" id="icon"></button>
                        <button type="button" id="iconButton" onclick="clickedTag(event)"><img src="/icons/melk.png" title="Melk" id="icon"></button>
                        <button type="button" id="iconButton" onclick="clickedTag(event)"><img src="/icons/sesamzaad.png" title="Sesamzaad" id="icon"></button>
                        <button type="button" id="iconButton" onclick="clickedTag(event)"><img src="/icons/noten.png" title="Noten" id="icon"></button>
                        <button type="button" id="iconButton" onclick="clickedTag(event)"><img src="/icons/zwaveldioxide.png" title="Zwaveldioxide" id="icon"></button>
                        <button type="button" id="iconButton" onclick="clickedTag(event)"><img src="/icons/selderij.png" title="Selderij" id="icon"></button>
                        <button type="button" id="iconButton" onclick="clickedTag(event)"><img src="/icons/pinda.png" title="Pinda" id="icon"></button>
                        <button type="button" id="iconButton" onclick="clickedTag(event)"><img src="/icons/mosterd.png" title="Mosterd" id="icon"></button>
                        <button type="button" id="iconButton" onclick="clickedTag(event)"><img src="/icons/vis.png" title="Vis" id="icon"></button>
                        <button type="button" id="iconButton" onclick="clickedTag(event)"><img src="/icons/weekdieren.png" title="Weekdieren" id="icon"></button>
                        <button type="button" id="iconButton" onclick="clickedTag(event)"><img src="/icons/soja.png" title="Soja" id="icon"></button>
                        <button type="button" id="iconButton" onclick="clickedTag(event)"><img src="/icons/schaaldieren.png" title="Schaaldieren" id="icon"></button>
                    </div>
                    <div class="stepBox", id="stepBox">
                        <% recipe.Recept.Stappen.forEach(step => { %>
                        <div class="step">
                                <input type="text" name="Stappen" placeholder="Typ hier een nieuwe stap" value="<%= step %>"></input>
                            </div>
                        <% }) %>
                    </div>
                    <button type="button" onclick="insertStep()">Add Step!!! ãƒ„</button>
                    <%- include("../partial/insertStep.ejs") %>
                </div>
            </div>
            <div class="submitBox">
                <input type="submit" value="Voeg toe!">
            </div>
        </div>
    </form>
