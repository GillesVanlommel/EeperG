<body>
    <form action="<%= recipe.Recept.Naam !== '' ? '/recipes/edit' : 'recipes/add' %>" method="post">
        <div class="main">
            <div id="drag_drop"
             ondrop="dropped(event)" 
             ondragover="dragOverHandler(event)" 
             ondragleave="dragLeaveHandler(event)"
             style="background-image: url('<%= recipe.Recept.Foto %>');">
            </div>
                <input type="hidden" name="Foto" id="Foto">
                <img src="<%= recipe.Recept.Naam !== '' ? '' : '/icons/image.png'%>">
            <%- include("../partial/dragDrop.ejs") %>
                <input type="text" name="Naam"  placeholder="Naam"  value="<%= recipe.Recept.Naam %>">
                <input type="text" name="Prijs" placeholder="Prijs" value="<%= recipe.Recept.Prijs %>">
            </div>
            <div class="bottom">
                <div class="bottomLeft">
                    <%- include("../partial/userWidget.ejs") %>
                    <div class="ingredBox">
                        <input type="text" name="Ingredienten" placeholder="Ingredienten" value="<%= JSON.stringify(recipe.Recept.Ingredienten)%>">
                    </div>
                    
                </div>
                <div class="bottomRight">
                    <div class="tagsBox">
                        <!-- TODO: link knoppen aan output
